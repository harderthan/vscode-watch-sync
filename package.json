{
  "name": "watch-sync",
  "displayName": "Watch Sync",
  "description": "Sync local directory to remote via SSH/rsync using inotifywait",
  "version": "0.0.1",
  "publisher": "nicky",
  "license": "MIT",
  "icon": "images/icon.png",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "sync",
    "rsync",
    "ssh",
    "remote",
    "inotify",
    "watch",
    "file sync"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/harderthan/vscode-watch-sync"
  },
  "bugs": {
    "url": "https://github.com/harderthan/vscode-watch-sync/issues"
  },
  "homepage": "https://github.com/harderthan/vscode-watch-sync#readme",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Watch Sync",
      "properties": {
        "watchSync.profiles": {
          "type": "array",
          "description": "List of sync profiles",
          "items": {
            "type": "object",
            "properties": {
              "alias": {
                "type": "string",
                "description": "Unique name for this profile"
              },
              "remoteUser": {
                "type": "string"
              },
              "remoteHost": {
                "type": "string"
              },
              "remoteDir": {
                "type": "string"
              },
              "localDir": {
                "type": "string",
                "default": "${workspaceFolder}"
              },
              "sshPort": {
                "type": "number",
                "default": 22
              },
              "direction": {
                "type": "string",
                "description": "Direction of sync",
                "enum": [
                  "localToRemote"
                ],
                "default": "localToRemote"
              },
              "conflictPolicy": {
                "type": "string",
                "enum": [
                  "localWins"
                ],
                "default": "localWins"
              },
              "exclude": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "default": [
                  ".git",
                  "node_modules"
                ]
              }
            },
            "required": [
              "alias",
              "remoteUser",
              "remoteHost",
              "remoteDir"
            ]
          }
        },
        "watchSync.autoStartProfile": {
          "type": "string",
          "description": "Alias of the profile to auto-start on launch (optional)"
        }
      }
    },
    "commands": [
      {
        "command": "watchSync.start",
        "title": "Watch Sync: Start"
      },
      {
        "command": "watchSync.stop",
        "title": "Watch Sync: Stop"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "vsix": "vsce package",
    "vsix:pre": "npm run lint && npm run package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/ssh2": "^1.15.5",
    "@types/vscode": "^1.70.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "ts-loader": "^9.4.3",
    "typescript": "^5.1.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1"
  },
  "dependencies": {
    "ssh2": "^1.17.0"
  }
}
